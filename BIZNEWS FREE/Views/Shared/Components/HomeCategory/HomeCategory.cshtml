@model List<Category>

<div class="nav-link dropdown-toggle">
    <a href="#" class="nav-link dropdown-toggle">Category</a>
    @for (int i = 0; i < Model.Count; i++)
    {
        <button class="tablinks @(i == 0 ? "active" : "")" onclick="showArticles(@i + 1)">@Model[i].CategoryName</button>
    }
</div>

<div id="categories-content">
    @{
        int counter = 1;
    }
    @foreach (var item in Model)
    {
        <div id="cat@(counter)" class="category-articles" style="display: none;">
            <div class="row">
                @foreach (var article in item.Article.Take(4))
                {
                    <div class="col-lg-3 col-md-6 col-sm-12 col-xs-12">
                        <div class="blog-box">
                            <div class="post-media">
                                <a href="tech-single.html" title="">
                                    <img src="@article.PhotoUrl" alt="" class="img-fluid">
                                    <div class="hovereffect"></div>
                                    <span class="menucat">@item.CategoryName</span>
                                </a>
                            </div>
                            <div class="blog-meta">
                                <h4><a href="tech-single.html" title="">@article.Title</a></h4>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        counter++;
    }
</div>


