@model List<Category>

<div class="container-fluid p-0">

    <div class="nav-item dropdown">
        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Категории</a>
        <div class="dropdown-menu rounded-0 m-0">
            <!-- Используем цикл для отображения всех категорий в выпадающем меню -->
            @for (int i = 0; i < Model.Count; i++)
            {
                <a href="@Url.Action("Category", "Home", new { id = Model[i].Id })" class="dropdown-item">@Model[i].CategoryName</a>
            }
        </div>
    </div>
</div>

    



     

        
       
        
   